<view class="home-page-container">
  <view class="home-page-section-header">
    <view class="section-title">最新动态</view>
    <view class="section-more" bind:tap="goToMoreAnnouncements">
      <text class="more-text">更多</text>
      <t-icon name="chevron-right" size="24rpx" color="#999" />
    </view>
  </view>

  <news-list
    newsList="{{announcementList}}"
    bind:click="announcementListClickHandle"
    bind:thumb="announcementListThumbHandle"
  />
