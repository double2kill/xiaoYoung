.announcement-detail-page {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.detail-header {
  margin-bottom: 40rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.detail-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-time {
  font-size: 28rpx;
  color: #666;
}

.detail-views {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.views-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.views-count {
  font-size: 28rpx;
}

.detail-content {
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.content-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
  white-space: pre-line;
}
