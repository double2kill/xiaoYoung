<t-user-center-card
  userInfo="{{userInfo}}"
  isPhoneHide="{{true}}"
  name-class="custom-name-class"
  phone-class="custom-phone-class"
  avatar-class="customer-avatar-class"
  currAuthStep="{{currAuthStep}}"
  bind:gotoUserEditPage="gotoUserEditPage"
/>

<view wx:if="{{!currentUser}}" class="login-prompt">
  <view class="login-prompt__text">请先登录以使用完整功能</view>
  <button class="login-prompt__btn" bindtap="gotoLogin">立即登录</button>
</view>

<view wx:if="{{currentUser}}" class="logout-btn" bindtap="onLogout">
  <text>退出登录</text>
</view>

<view wx:if="{{currentUser}}" class="content-wrapper">
  <view class="business-card-section">
    <view class="section-header">
      <text class="section-title">我的名片</text>
      <t-button
        theme="primary"
        size="small"
        bind:tap="onEditBusinessCard"
        class="edit-btn"
      >
        编辑
      </t-button>
    </view>
    <business-card-display 
      business-card="{{businessCard}}" 
      show-actions="{{false}}"
      loading="{{businessCardLoading}}"
    />
  </view>
  
  <view wx:for="{{menuData}}" wx:key="item" class="cell-box">
    <t-cell-group>
      <t-cell
        wx:for="{{item}}"
        wx:for-item="xitem"
        wx:for-index="xindex"
        wx:key="xindex"
        title="{{xitem.title}}"
        arrow="{{true}}"
        note="{{xitem.tit}}"
        data-type="{{xitem.type}}"
        bordered="{{false}}"
        bind:click="onClickCell"
        t-class="t-cell-padding"
        t-class-note="menu-icon"
        t-class-left="menu-group__left"
      >
        <t-icon name="{{xitem.icon}}" size="48rpx" slot="note" />
      </t-cell>
    </t-cell-group>
  </view>
</view>
<view class="footer__version" wx:if="{{versionNo !== ''}}">当前版本 {{versionNo}}</view>
<t-toast id="t-toast" />
