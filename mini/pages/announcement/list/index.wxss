page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.announcement-list-page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 0 32rpx;
}

.category-tabs-container {
  background: #f5f5f5;
  margin-bottom: 24rpx;
}

.category-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: #fa550f;
}

.category-tabs__item {
  font-size: 28rpx;
  color: #666;
}

.category-tabs__active {
  color: #333 !important;
  font-size: 32rpx;
  font-weight: 600;
}

