.preview-container {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.business-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  border: 4rpx solid #f0f0f0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.position {
  font-size: 28rpx;
  color: #0052d9;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.company {
  font-size: 26rpx;
  color: #666;
}

.card-content {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx 0;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.card-footer {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.introduction {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
}

.intro-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.intro-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.edit-btn {
  flex: 1;
}

.share-btn {
  flex: 1;
}
