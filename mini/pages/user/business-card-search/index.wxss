.search-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-form {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.picker-display {
  padding: 24rpx 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
  color: #333;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

.picker-display:empty::before {
  content: attr(placeholder);
  color: #999;
}

.search-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.clear-btn {
  flex: 1;
}

.search-btn {
  flex: 1;
}

.tabs {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.cards-list {
  padding: 30rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}
