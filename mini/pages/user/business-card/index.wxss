.business-card-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.picker-display {
  padding: 24rpx 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
  color: #333;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

.picker-display:empty::before {
  content: attr(placeholder);
  color: #999;
}

.button-group {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.save-btn {
  width: 100%;
  max-width: 400rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}
