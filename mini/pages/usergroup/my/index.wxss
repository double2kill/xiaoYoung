page {
  height: auto;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
  padding-bottom: 200rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - 40rpx);
}

.toolbar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.link-btn {
  padding: 12rpx 24rpx;
  color: #FF5F15;
  background: #fff7f0;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.group-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.group-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.group-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.12);
}

.group-header {
  margin-bottom: 20rpx;
}

.group-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.group-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.group-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.joined {
  color: #52c41a;
  background-color: #f6ffed;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid #b7eb8f;
}

.group-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 15rpx;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  font-weight: bold;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
  flex-direction: column;
}

.empty-text {
  margin-bottom: 24rpx;
}

.empty-action {
  padding: 16rpx 32rpx;
  background-color: #FF5F15;
  color: #fff;
  border-radius: 999rpx;
  font-size: 28rpx;
}


