<view class="container">
  <view class="toolbar">
    <view class="link-btn" bindtap="onGoAllGroups">全部圈子</view>
  </view>
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>

  <view wx:elif="{{groupList.length > 0}}" class="group-list">
    <view wx:for="{{groupList}}" wx:key="id" class="group-item" bindtap="onGroupTap" data-id="{{item.id}}">
      <view class="group-header">
        <view class="group-name">{{item.name}}</view>
        <view class="group-desc">{{item.description}}</view>
      </view>

      <view class="group-stats">
        <view class="stat-item">
          <text class="stat-label">成员</text>
          <text class="stat-value">{{item.memberCount}}人</text>
        </view>
        <view class="stat-item">
          <text class="stat-label">类型</text>
          <text class="stat-value">{{item.groupType}}</text>
        </view>
      </view>

      <view class="group-footer">
        <user-avatar
          avatar="{{item.createdByInfo.avatar}}"
          name="{{item.createdByInfo.name}}"
          username="{{item.createdByInfo.username}}"
          size="small"
          show-name="{{true}}"
        />
        <view class="group-meta">
          <text class="meta-text">创建时间: {{item.createdAt}}</text>
        </view>
        <view class="arrow">></view>
      </view>
    </view>
  </view>

  <view wx:else class="empty">
    <view class="empty-text">你还没有加入任何圈子</view>
    <view class="empty-action" bindtap="onGoAllGroups">去逛逛</view>
  </view>
</view>


