page {
  height: auto;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - 40rpx);
}

.group-detail {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.group-header {
  margin-bottom: 30rpx;
}

.group-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.group-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  line-height: 1.4;
}

.group-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 25rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item.clickable {
  cursor: pointer;
  position: relative;
  transition: all 0.3s ease;
}

.stat-item.clickable:active {
  transform: scale(0.95);
  background-color: #f0f0f0;
  border-radius: 8rpx;
  padding: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-arrow {
  position: absolute;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.rating {
  display: flex;
  gap: 8rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-icon {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.creator-info {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.creator-header {
  margin-bottom: 20rpx;
}

.creator-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.creator-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.creator-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #e9ecef;
}

.creator-avatar image {
  width: 100%;
  height: 100%;
}

.creator-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.creator-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.creator-company {
  font-size: 24rpx;
  color: #666;
}

.creator-position {
  font-size: 22rpx;
  color: #999;
}

.group-meta {
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
}

.meta-value {
  font-size: 24rpx;
  color: #666;
}

.members-info {
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.members-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 10rpx;
  border-radius: 8rpx;
  background-color: #f8f9fa;
  transition: background-color 0.3s ease;
}

.members-header:active {
  background-color: #e9ecef;
}

.members-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.members-count-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.members-count {
  font-size: 24rpx;
  color: #666;
}

.view-more {
  font-size: 22rpx;
  color: #007bff;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.member-item {
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.more-members {
  padding: 15rpx;
  text-align: center;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  margin-top: 10rpx;
}

.more-text {
  font-size: 24rpx;
  color: #666;
}

.member-role {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.member-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.member-status.status-approved {
  background-color: #d4edda;
  color: #155724;
}

.member-status.status-pending {
  background-color: #fff3cd;
  color: #856404;
}

.member-joined {
  font-size: 22rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.join-btn {
  flex: 1;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}


.join-btn:active {
  background-color: #0056cc;
}

/* 新的布局样式 */
.group-info-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.events-section,
.dynamics-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-count,
.event-count,
.dynamic-count {
  font-size: 24rpx;
  color: #666;
}

.view-more {
  font-size: 24rpx;
  color: #1890ff;
}


.events-preview,
.dynamics-preview {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.event-item,
.dynamic-item {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.event-title,
.dynamic-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.event-meta,
.dynamic-meta {
  display: flex;
  gap: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.event-time,
.event-location,
.dynamic-author,
.dynamic-time {
  font-size: 22rpx;
  color: #666;
}

.empty-content {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.fixed-bottom .join-btn {
  width: 100%;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #999;
}

