<view class="container">
  <view wx:if="{{loading}}" class="loading">
    <text>加载中...</text>
  </view>
  
  <view wx:elif="{{groupInfo}}" class="group-detail">
    <view class="group-header">
      <view class="group-name">{{groupInfo.name}}</view>
      <view wx:if="{{groupInfo.description}}" class="group-desc">{{groupInfo.description}}</view>
    </view>
    
    <view class="group-stats">
      <view class="stat-item">
        <text class="stat-label">成员</text>
        <text class="stat-value">{{groupInfo.memberCount}}人</text>
      </view>
      <view class="stat-item">
        <text class="stat-label">类型</text>
        <text class="stat-value">{{groupInfo.groupType}}</text>
      </view>
      <view class="stat-item">
        <text class="stat-label">状态</text>
        <text class="stat-value status-{{groupInfo.status}}">{{groupInfo.status === 'approved' ? '已通过' : groupInfo.status === 'pending' ? '待审核' : '已拒绝'}}</text>
      </view>
    </view>
    
    <view class="group-meta">
      <view class="meta-item">
        <text class="meta-label">创建时间:</text>
        <text class="meta-value">{{groupInfo.createdAt}}</text>
      </view>
      <view class="meta-item">
        <text class="meta-label">创建者:</text>
        <text class="meta-value">{{groupInfo.createdBy}}</text>
      </view>
    </view>
    
    <view wx:if="{{groupInfo.members && groupInfo.members.length > 0}}" class="members-info">
      <view class="members-header">
        <text class="members-title">成员列表</text>
        <text class="members-count">({{groupInfo.members.length}}人)</text>
      </view>
      <view class="members-list">
        <view wx:for="{{groupInfo.members}}" wx:key="userId" class="member-item">
          <view class="member-info">
            <text class="member-role">{{item.role === 'admin' ? '管理员' : '成员'}}</text>
            <text class="member-status status-{{item.status}}">{{item.status === 'approved' ? '已通过' : '待审核'}}</text>
          </view>
          <view class="member-joined">加入时间: {{item.joinedAt}}</view>
        </view>
      </view>
    </view>
    
    <view class="action-buttons">
      <button class="join-btn" bindtap="onJoinGroup">加入圈子</button>
    </view>
  </view>
  
  <view wx:else class="empty">
    <text>圈子不存在</text>
  </view>
</view>
