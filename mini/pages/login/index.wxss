.login-container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
  max-width: 600rpx;
}

.input-group {
  margin-bottom: 60rpx;
  position: relative;
}

.input-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.username-input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 44rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.username-input::placeholder {
  color: #999;
}

.dropdown-btn {
  position: absolute;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 25rpx;
}

.dropdown-icon {
  font-size: 24rpx;
  color: #667eea;
  transition: transform 0.3s ease;
}

.user-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-top: 10rpx;
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 100;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-item:last-child {
  border-bottom: none;
}

.user-item.selected {
  background: rgba(102, 126, 234, 0.1);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.user-username {
  font-size: 24rpx;
  color: #666;
}

.user-company {
  font-size: 24rpx;
  color: #999;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #667eea;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn::after {
  border: none;
}

.login-footer {
  margin-top: 80rpx;
  text-align: center;
}

.tip {
  font-size: 24rpx;
  color: #999;
}
