.business-card-display {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-right: 24rpx;
  border: 3rpx solid #f0f0f0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.position {
  font-size: 26rpx;
  color: #0052d9;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.company {
  font-size: 24rpx;
  color: #666;
}

.card-content {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 120rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.card-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
}

.card-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.introduction {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.intro-title {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.intro-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
  color: #999;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}
